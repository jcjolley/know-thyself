{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": false
  },
  "include": [
    "src/server/**/*",
    "src/main/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/preload/**/*",
    "src/renderer/**/*"
  ]
}
